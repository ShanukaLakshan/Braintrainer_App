<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    tools:context=".MainActivity" >

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/textView0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sinhala3"
        android:text=",shdmosxps fjkak"
        android:textSize="40dp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView0"
        android:layout_centerHorizontal="true"
        android:text="English"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/sinhala_button"/>

    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:text="fuys Tnf.a Bfu,a ,smskh fhdokak"
        android:fontFamily="@font/sinhalafont"
        android:layout_below="@id/english" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textbox"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:layout_below="@id/t1"
        android:textColorHint="#FFEB3B"
        android:textColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/t2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:text="fuys Tnf.a uqrmoh fhdokak"
        android:fontFamily="@font/sinhalafont"
        android:layout_below="@id/email" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:background="@drawable/textbox"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColorHint="#FFEB3B"
        android:inputType="textPassword"
        android:layout_below="@id/t2"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/t3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#FFFFFF" android:layout_marginBottom="5dp"
        android:text="fuys Tnf.a mdi, fhdokak"
        android:fontFamily="@font/sinhalafont"
        android:layout_below="@id/password" />

    <EditText
        android:id="@+id/school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:background="@drawable/textbox"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColorHint="#FFEB3B"
        android:inputType="textPersonName"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/t3"/>

    <TextView
        android:id="@+id/t4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:text="fuys Tnf.a mka;sh fhdokak"
        android:fontFamily="@font/sinhalafont"
        android:layout_below="@id/school" />
    <EditText
        android:id="@+id/grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:background="@drawable/textbox"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColorHint="#FFEB3B"
        android:inputType="textPersonName"
        android:layout_marginTop="5dp"
        android:layout_below="@id/t4"/>


    <LinearLayout
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/layer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/grade">

        <Button
            android:id="@+id/register"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:text="Register"
            android:padding="15dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/login"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:text="Login"
            android:padding="10dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_below="@id/layer1"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designed By Unique International"
        android:textColor="#000000"
        android:textStyle="italic"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/sign_in_button"
        android:paddingBottom="30dp"
        />
</RelativeLayout>